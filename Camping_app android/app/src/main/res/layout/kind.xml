<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="20dp">
        <TableRow>
            <ImageView
                android:id="@+id/regularimg"
                android:layout_weight="1"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/camping"/>
            <ImageView
                android:id="@+id/carimg"
                android:layout_weight="1"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:src="@drawable/carcamping"/>
        </TableRow>
        <TableRow
            android:layout_marginBottom="40dp">
            <Button
                android:id="@+id/regular"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:text="일반"/>
            <Button
                android:id="@+id/car"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:text="자동차"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/glampingimg"
                android:layout_weight="1"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/glamping"/>
            <ImageView
                android:id="@+id/caravanimg"
                android:layout_weight="1"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:src="@drawable/caravan"/>
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/glamping"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:text="글램핑"/>
            <Button
                android:id="@+id/caravan"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:text="카라반"/>
        </TableRow>
    </TableLayout>

</LinearLayout>